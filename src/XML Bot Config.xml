<?xml version="1.0" encoding="UTF-8"?>
<!--SET CONTROLLER TO XMODE!-->
<Dreadbot version="5.0">
	<Drivebase type="Mecanum">
		<motors>
			<motor position="frontLeft">1</motor>
			<motor position="frontRight">2</motor>
			<motor position="backLeft">3</motor>
			<motor position="backRight">4</motor>
		</motors>
		<controller controllerID="0">
			<axis dir="transY">
				<ID>5</ID>
				<deadzone>0.01</deadzone>
				<invert>true</invert>
			</axis>
			<axis dir="transX">
				<ID>0</ID>
				<deadzone>0.01</deadzone>
				<invert>false</invert>
			</axis>
			<axis dir="rot">
				<ID>4</ID>
				<deadzone>0.01</deadzone>
				<invert>false</invert>
			</axis>
		</controller>
	</Drivebase>
	<motorgroups>
		<group name="intake" deadzone="0">
			<motor outputID="5" invert="false" CAN="false"></motor>
			<motor outputID="6" invert="true" CAN="false"></motor>
		</group>
		<group name="internal" deadzone="0"> <!--These ones are fake, for testing/demo purposes-->
			<motor outputID="7" invert="false" CAN="false"></motor>
			<motor outputID="8" invert="true" CAN="false"></motor>
		</group>
	</motorgroups>
	<pnuematicgroups>
		<group name="lifter">
			<dsolenoid forwardID="1" reverseID="2" invert="false"></dsolenoid>
			<dsolenoid forwardID="3" reverseID="4" invert="false"></dsolenoid>
		</group>
	</pnuematicgroups>
</Dreadbot>
